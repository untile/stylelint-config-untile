{
  "name": "@untile/stylelint-config-untile",
  "version": "0.0.2",
  "description": "Untile-flavored stylelint config",
  "keywords": [
    "config",
    "react",
    "styled-components",
    "stylelint",
    "untile"
  ],
  "homepage": "https://github.com/untile/stylelint-config-untile#readme",
  "bugs": {
    "url": "https://github.com/untile/stylelint-config-untile/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/untile/stylelint-config-untile.git"
  },
  "license": "MIT",
  "author": "Untile",
  "main": "src",
  "scripts": {
    "changelog": "github-changelog-generator --future-release=v$npm_package_version > CHANGELOG.md",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test-watch": "jest --watch --notify",
    "version": "npm run changelog && git add -A CHANGELOG.md"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "testRegex": "(test/.*\\.test.js)$"
  },
  "dependencies": {
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@untile/eslint-config-untile-react": "^0.0.3",
    "@uphold/github-changelog-generator": "^1.0.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "jest-preset-stylelint": "^3.0.0",
    "lint-staged": "^10.5.4",
    "pre-commit": "^1.2.2",
    "sort-package-json": "^1.52.0",
    "stylelint": "^13.13.1"
  },
  "peerDependencies": {
    "stylelint": "^13.13.0"
  },
  "engines": {
    "node": ">= 10"
  }
}
